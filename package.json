{
  "name": "ozi-backend",
  "version": "1.0.0",
  "description": "OZi Backend - Warehouse Management System with RBAC",
  "main": "dist/server.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && npm run copy-public",
    "netlify:build": "tsc && npm run copy-public",
    "netlify-build": "npm install typescript && tsc && npm run copy-public",
    "copy-public": "cp -r public/* dist/",
    "start": "node dist/server.js",
    "format": "prettier --write .",
    "init-rbac": "tsx src/script/initializeRBAC.ts",
    "test-rbac": "tsx src/script/testRBAC.ts",
    "test-registration": "tsx src/script/testRegistration.ts",
    "debug-permissions": "tsx src/script/debugPermissions.ts",
    "debug-roles": "tsx src/script/debugRoles.ts",
    "test-simple-registration": "tsx src/script/testSimpleRegistration.ts",
    "test-full-registration": "tsx src/script/testFullRegistration.ts",
    "db:setup": "tsx src/script/setupDatabase.ts",
    "db:fix": "tsx src/script/fixDatabaseSchema.ts",
    "db:seed": "tsx src/script/seedData.ts",
    "setup-picking": "tsx src/script/setupPickingTables.ts",
    "setup-packing": "tsx src/script/setupPackingTables.ts",
    "generate-mock-data": "tsx src/script/generateMockData.ts",
    "test-packing": "tsx src/script/testPackingModule.ts"
  },
  "dependencies": {
    "aws-sdk": "^2.1691.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.2",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.13",
    "sequelize": "^6.37.1",
    "serverless-http": "^3.2.0",
    "socket.io": "^4.8.1",
    "typescript": "^5.9.2",
    "uuid": "^10.0.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1"
  }
}
