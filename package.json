{
  "name": "ozi-backend",
  "version": "1.0.0",
  "description": "OZi Backend - Warehouse Management System with RBAC",
  "main": "dist/server.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "format": "prettier --write .",
    "init-rbac": "tsx src/script/initializeRBAC.ts",
    "test-rbac": "tsx src/script/testRBAC.ts",
    "test-registration": "tsx src/script/testRegistration.ts",
    "debug-permissions": "tsx src/script/debugPermissions.ts",
    "test-simple-registration": "tsx src/script/testSimpleRegistration.ts",
    "test-full-registration": "tsx src/script/testFullRegistration.ts",
    "db:setup": "tsx src/script/setupDatabase.ts",
    "db:seed": "tsx src/script/seedData.ts",
    "setup-picking": "tsx src/script/setupPickingTables.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.2",
    "sequelize": "^6.37.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  }
}
