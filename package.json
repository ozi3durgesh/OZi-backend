{
  "name": "ozi-backend",
  "version": "1.0.0",
  "description": "OZi Backend - Warehouse Management System with RBAC",
  "main": "dist/server.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && npm run copy-public",
    "netlify:build": "npm install typescript && tsc && npm run copy-public",
    "netlify-build": "npm install typescript && tsc && npm run copy-public",
    "copy-public": "if [ -d public ]; then cp -r public/* dist/; else echo 'No public directory found, skipping copy'; fi",
    "start": "node dist/server.js",
    "format": "prettier --write .",
    "init-rbac": "tsx src/script/initializeRBAC.ts",
    "debug-permissions": "tsx src/script/debugPermissions.ts",
    "debug-roles": "tsx src/script/debugRoles.ts",
    "db:fix": "tsx src/script/fixDatabaseSchema.ts",
    "db:validate": "tsx src/script/validateDatabaseSchema.ts",
    "init-scanner": "tsx src/script/initScannerTables.ts",
    "migrate:vendor-dc": "tsx src/script/runVendorDcMigration.ts",
    "migrate:dc-po": "tsx src/script/runDCPOMigration.ts",
    "migrate:dc-grn": "tsx src/script/runDCGrnMigration.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.884.0",
    "@aws-sdk/s3-request-presigner": "^3.886.0",
    "@types/node-cron": "^3.0.11",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.2.0",
    "fs": "^0.0.1-security",
    "grep": "^0.1.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "mysql2": "^3.15.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "path": "^0.12.7",
    "pdfkit": "^0.17.2",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.13",
    "sequelize": "^6.37.7",
    "serverless-http": "^3.2.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "typescript": "^5.9.2",
    "uuid": "^10.0.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.18.1",
    "@types/nodemailer": "^7.0.1",
    "@types/pdfkit": "^0.17.2",
    "@types/socket.io-client": "^1.4.36",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1"
  }
}
