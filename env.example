# Database Configuration (Railway MySQL)
DATABASE_URL=mysql://root:password@host:port/database

# Alternative individual database variables (if not using DATABASE_URL)
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_NAME=ozi_backend
# DB_USER=root
# DB_PASSWORD=password

# JWT Configuration
JWT_ACCESS_SECRET=your_jwt_access_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Admin Registration
ADMIN_REGISTRATION_SECRET=your_admin_registration_secret_here

# Server Configuration
NODE_ENV=production
PORT=3000

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# AWS S3 Configuration (for photo storage)
S3_BUCKET=ozi-packing-photos
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_aws_access_key
S3_SECRET_ACCESS_KEY=your_aws_secret_key

# LMS Integration Configuration
LMS_BASE_URL=https://lms.example.com/api
LMS_API_KEY=your_lms_api_key
LMS_TIMEOUT=30000
LMS_RETRY_ATTEMPTS=3
LMS_RETRY_DELAY=1000

# Seal Generation
SEAL_SECRET=your_seal_secret_here

# App Version Check
MIN_APP_VERSION=1.0.0

# Optional: Redis Configuration (if using)
# REDIS_URL=your_redis_url_here
